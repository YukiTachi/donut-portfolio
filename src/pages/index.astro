---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<!-- Hero Section -->
		<section class="hero">
			<div class="container">
				<h1 class="name">Yuki Tachi</h1>
				<p class="title">個人事業主 / ソフトウェアエンジニア</p>
			</div>
		</section>

		<!-- Profile Section -->
		<section class="profile">
			<div class="container">
				<div class="profile-card">
					<div class="terminal-header">
						<span class="terminal-dots">
							<span></span><span></span><span></span>
						</span>
						<span class="terminal-title">portfolio.sh</span>
					</div>
					<h2><span class="prompt">$</span> cat profile.json</h2>
					<div class="profile-grid">
						<div class="profile-item">
							<h3>会社</h3>
							<p>Donut Service（2017年独立）</p>
						</div>
						<div class="profile-item">
							<h3>経歴</h3>
							<p>Sony 14年 → 独立</p>
						</div>
						<div class="profile-item">
							<h3>専門分野</h3>
							<p>フルスタック開発</p>
							<ul>
								<li>Python</li>
								<li>Flutter</li>
								<li>PHP</li>
								<li>Docker</li>
								<li>AWS</li>
							</ul>
						</div>
						<div class="profile-item">
							<h3>経験</h3>
							<p>FreeBSD: 25年</p>
						</div>
					</div>
				</div>

				<div class="products-card">
					<div class="terminal-header">
						<span class="terminal-dots">
							<span></span><span></span><span></span>
						</span>
						<span class="terminal-title">products.js</span>
					</div>
					<h2><span class="prompt">></span> list --products</h2>
					<div class="products-list">
						<a href="https://donut-service.com/" target="_blank" rel="noopener noreferrer" class="product">
							<h3>BrainSync</h3>
							<p>エンジニア向け認知トレーニングプラットフォーム</p>
						</a>
						<a href="https://5meals.donut-software.com/" target="_blank" rel="noopener noreferrer" class="product">
							<h3>5ive Meals</h3>
							<p>栄養管理システム</p>
						</a>
						<div class="product">
							<h3>toio教育カリキュラム</h3>
							<p>toioを活用した教育プログラム</p>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- Floating Geometric Shapes -->
		<div class="geometric-shapes">
			<div class="shape hexagon"></div>
			<div class="shape triangle"></div>
			<div class="shape circle"></div>
			<div class="shape square"></div>
		</div>
	</main>
</Layout>

<style>
	:root {
		--color-primary: #0a0e27;
		--color-secondary: #1a1f3a;
		--color-accent: #00d9ff;
		--color-accent-2: #0066ff;
		--color-text: #e4e4e7;
		--color-text-light: #a1a1aa;
		--color-bg: #0f1419;
		--color-bg-alt: #161b22;
		--color-border: #30363d;
		--spacing-unit: 1rem;
	}

	main {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
			'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
		color: var(--color-text);
		line-height: 1.6;
		background: var(--color-bg);
		position: relative;
		overflow-x: hidden;
	}

	/* Grid Background */
	main::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: linear-gradient(var(--color-border) 1.5px, transparent 1.5px),
			linear-gradient(90deg, var(--color-border) 1.5px, transparent 1.5px);
		background-size: 50px 50px;
		opacity: 0.4;
		z-index: 0;
		pointer-events: none;
	}

	/* Scanline Effect */
	main::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: repeating-linear-gradient(
			0deg,
			rgba(0, 0, 0, 0.1),
			rgba(0, 0, 0, 0.1) 1px,
			transparent 1px,
			transparent 2px
		);
		z-index: 0;
		pointer-events: none;
		opacity: 0.2;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		position: relative;
		z-index: 1;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		padding: 8rem 0 6rem;
		text-align: center;
		position: relative;
		border-bottom: 2px solid var(--color-accent);
	}

	.hero::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		right: 0;
		height: 2px;
		background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
		animation: scan 3s ease-in-out infinite;
	}

	@keyframes scan {
		0%,
		100% {
			opacity: 0.5;
		}
		50% {
			opacity: 1;
		}
	}

	.name {
		font-size: 4rem;
		font-weight: 700;
		margin: 0 0 0.5rem;
		letter-spacing: -0.02em;
		background: linear-gradient(135deg, #ffffff 0%, var(--color-accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.japanese-name {
		font-size: 1.75rem;
		margin: 0 0 1.5rem;
		opacity: 0.85;
		font-weight: 300;
		font-family: 'JetBrains Mono', 'Courier New', monospace;
		color: var(--color-accent);
	}

	.title {
		font-size: 1.25rem;
		margin: 0;
		opacity: 0.9;
		font-weight: 400;
		border: 1px solid var(--color-accent);
		display: inline-block;
		padding: 0.5rem 1.5rem;
		border-radius: 4px;
		background: rgba(0, 217, 255, 0.05);
	}

	/* Profile Section */
	.profile {
		padding: 4rem 0;
		background: var(--color-bg);
	}

	.profile-card,
	.products-card {
		background: var(--color-bg-alt);
		border-radius: 0;
		padding: 3rem;
		margin-bottom: 3rem;
		border: 1px solid var(--color-border);
		box-shadow: 0 0 30px rgba(0, 217, 255, 0.1);
		position: relative;
		transition: all 0.3s ease;
	}

	.profile-card::before,
	.products-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 4px;
		height: 100%;
		background: linear-gradient(180deg, var(--color-accent) 0%, var(--color-accent-2) 100%);
	}

	.profile-card:hover,
	.products-card:hover {
		box-shadow: 0 0 50px rgba(0, 217, 255, 0.2);
		border-color: var(--color-accent);
	}

	/* Terminal Header */
	.terminal-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
		padding: 0.75rem 1rem;
		background: var(--color-primary);
		border: 1px solid var(--color-border);
		border-bottom: 2px solid var(--color-accent);
	}

	.terminal-dots {
		display: flex;
		gap: 0.5rem;
	}

	.terminal-dots span {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		display: block;
	}

	.terminal-dots span:nth-child(1) {
		background: #ff5f56;
	}

	.terminal-dots span:nth-child(2) {
		background: #ffbd2e;
	}

	.terminal-dots span:nth-child(3) {
		background: #27c93f;
	}

	.terminal-title {
		font-family: 'JetBrains Mono', 'Courier New', monospace;
		font-size: 0.85rem;
		color: var(--color-text-light);
	}

	h2 {
		font-size: 1.5rem;
		margin: 0 0 2.5rem;
		color: var(--color-text);
		font-weight: 700;
		padding: 1rem 1.5rem;
		background: var(--color-primary);
		border-left: 4px solid var(--color-accent);
		font-family: 'JetBrains Mono', 'Courier New', monospace;
		position: relative;
	}

	h2::after {
		content: '';
		display: inline-block;
		width: 8px;
		height: 20px;
		background: var(--color-accent);
		margin-left: 0.5rem;
		animation: blink 1s step-end infinite;
	}

	@keyframes blink {
		0%,
		50% {
			opacity: 1;
		}
		51%,
		100% {
			opacity: 0;
		}
	}

	.prompt {
		color: var(--color-accent);
		margin-right: 0.5rem;
		font-weight: bold;
	}

	.profile-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2.5rem;
	}

	.profile-item {
		position: relative;
		padding: 1.5rem;
		background: var(--color-primary);
		border: 1px solid var(--color-border);
		transition: all 0.3s ease;
	}

	.profile-item::after {
		content: '';
		position: absolute;
		top: 0;
		right: 0;
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 0 30px 30px 0;
		border-color: transparent var(--color-accent) transparent transparent;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.profile-item:hover {
		border-color: var(--color-accent);
		transform: translateY(-4px);
		box-shadow: 0 4px 20px rgba(0, 217, 255, 0.15);
	}

	.profile-item:hover::after {
		opacity: 1;
	}

	.profile-item h3 {
		font-size: 0.9rem;
		color: var(--color-accent);
		margin: 0 0 1rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-family: 'JetBrains Mono', 'Courier New', monospace;
	}

	.profile-item h3::before {
		content: '// ';
		color: var(--color-text-light);
		opacity: 0.6;
	}

	.profile-item p {
		margin: 0;
		color: var(--color-text);
		font-size: 1rem;
		line-height: 1.8;
	}

	.profile-item ul {
		margin: 0.75rem 0 0;
		padding-left: 1.5rem;
		color: var(--color-text);
		list-style: none;
	}

	.profile-item li {
		margin: 0.5rem 0;
		position: relative;
		padding-left: 1rem;
	}

	.profile-item li::before {
		content: '▹';
		position: absolute;
		left: 0;
		color: var(--color-accent);
		font-weight: bold;
	}

	/* Products Section */
	.products-list {
		display: grid;
		gap: 2rem;
	}

	.product {
		padding: 2rem;
		background: var(--color-primary);
		border-radius: 0;
		border: 1px solid var(--color-border);
		border-left: 4px solid var(--color-accent);
		position: relative;
		transition: all 0.3s ease;
		overflow: hidden;
		display: block;
		text-decoration: none;
		color: inherit;
		cursor: pointer;
	}

	.product::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(0, 217, 255, 0.1),
			transparent
		);
		transition: left 0.5s ease;
	}

	.product:hover {
		border-color: var(--color-accent);
		transform: translateX(8px);
		box-shadow: -4px 4px 20px rgba(0, 217, 255, 0.2);
	}

	.product:hover::before {
		left: 100%;
	}

	.product h3 {
		font-size: 1.5rem;
		margin: 0 0 0.75rem;
		color: var(--color-accent);
		font-weight: 700;
		font-family: 'JetBrains Mono', 'Courier New', monospace;
	}

	.product p {
		margin: 0;
		color: var(--color-text-light);
		font-size: 1rem;
		line-height: 1.8;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.hero {
			padding: 5rem 0 4rem;
		}

		.name {
			font-size: 2.5rem;
		}

		.japanese-name {
			font-size: 1.25rem;
		}

		.title {
			font-size: 1rem;
		}

		.profile-card,
		.products-card {
			padding: 2rem;
		}

		h2 {
			font-size: 1.5rem;
		}

		.profile-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.container {
			padding: 0 1.5rem;
		}

		.profile-item {
			padding: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		.name {
			font-size: 2rem;
		}

		.japanese-name {
			font-size: 1rem;
		}

		.title {
			font-size: 0.9rem;
		}

		.profile-card,
		.products-card {
			padding: 1.5rem;
		}

		.terminal-header {
			padding: 0.5rem 0.75rem;
		}

		.geometric-shapes {
			display: none;
		}
	}

	/* Floating Geometric Shapes */
	.geometric-shapes {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 0;
		overflow: hidden;
	}

	.shape {
		position: absolute;
		opacity: 0.1;
		animation: float 20s ease-in-out infinite;
	}

	.hexagon {
		width: 100px;
		height: 100px;
		background: var(--color-accent);
		clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
		top: 10%;
		left: 10%;
		animation-delay: 0s;
	}

	.triangle {
		width: 0;
		height: 0;
		border-left: 60px solid transparent;
		border-right: 60px solid transparent;
		border-bottom: 100px solid var(--color-accent-2);
		top: 60%;
		right: 15%;
		animation-delay: 5s;
	}

	.circle {
		width: 80px;
		height: 80px;
		background: var(--color-accent);
		border-radius: 50%;
		bottom: 20%;
		left: 20%;
		animation-delay: 10s;
	}

	.square {
		width: 90px;
		height: 90px;
		background: var(--color-accent-2);
		transform: rotate(45deg);
		top: 40%;
		right: 10%;
		animation-delay: 15s;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0) rotate(0deg);
		}
		25% {
			transform: translateY(-30px) rotate(90deg);
		}
		50% {
			transform: translateY(0) rotate(180deg);
		}
		75% {
			transform: translateY(30px) rotate(270deg);
		}
	}
</style>
